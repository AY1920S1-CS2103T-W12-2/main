<HBox alignment="CENTER" prefHeight="120.0" prefWidth="400.0" styleClass="balance-bar" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <HBox prefHeight="120.0" prefWidth="300.0" styleClass="card-color">
         <children>
            <VBox id="income-side-card-color" prefHeight="200.0" prefWidth="5.0" />
            <VBox alignment="CENTER" prefHeight="200.0" prefWidth="50.0">
               <children>
                  <ImageView fitHeight="33.0" fitWidth="36.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <!--Icon made by srip from www.flaticon.com-->
                        <Image url="@img/profit-chart.png" />
                     </image>
                  </ImageView>
               </children>
            </VBox>
            <VBox alignment="CENTER_RIGHT" prefHeight="400.0" prefWidth="230.0">
               <children>
                  <Label alignment="CENTER_RIGHT" prefHeight="18.0" prefWidth="280.0" styleClass="balance-text" text="Income" />
                  <Label alignment="CENTER_RIGHT" prefHeight="18.0" prefWidth="280.0" text="\$1000.00" />
               </children>
            </VBox>
         </children>
      </HBox>
      <HBox prefHeight="120.0" prefWidth="300.0" styleClass="card-color">
         <children>
            <VBox id="expense-side-card-color" prefHeight="200.0" prefWidth="5.0" />
            <VBox alignment="CENTER" prefHeight="200.0" prefWidth="50.0">
               <children>
                  <ImageView fitHeight="34.0" fitWidth="31.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <!--Icon made by bqlqn from www.flaticon.com-->
                        <Image url="@img/loss-chart.png" />
                     </image>
                  </ImageView>
               </children>
            </VBox>
            <VBox alignment="CENTER_RIGHT" prefHeight="400.0" prefWidth="230.0">
               <children>
                  <Label alignment="CENTER_RIGHT" prefHeight="18.0" prefWidth="280.0" styleClass="balance-text" text="Expense" />
                  <Label alignment="CENTER_RIGHT" prefHeight="18.0" prefWidth="280.0" text="\$1000.00" />
               </children>
            </VBox>
         </children>
      </HBox>
      <HBox prefHeight="120.0" prefWidth="300.0" styleClass="card-color">
         <children>
            <VBox id="balance-side-card-color" prefHeight="200.0" prefWidth="5.0" />
            <VBox alignment="CENTER" prefHeight="200.0" prefWidth="50.0">
               <children>
                  <ImageView fitHeight="65.0" fitWidth="28.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <!--Icon made by bqlqn from www.flaticon.com-->
                        <Image url="@img/wallet.png" />
                     </image>
                  </ImageView>
               </children>
            </VBox>
            <VBox alignment="CENTER_RIGHT" prefHeight="400.0" prefWidth="230.0">
               <children>
                  <Label alignment="CENTER_RIGHT" prefHeight="18.0" prefWidth="230.0" styleClass="balance-text" text="Balance" />
                  <Label fx:id="monthBalanceValueLabel" alignment="CENTER_RIGHT" prefHeight="18.0" prefWidth="230.0" text="\$1000.00" />
               </children>
            </VBox>
         </children>
      </HBox>
   </children>
</HBox>
