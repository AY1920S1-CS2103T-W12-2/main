<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<HBox id="cardPane" fx:id="cardPane" xmlns="http://javafx.com/javafx/11" xmlns:fx="http://javafx.com/fxml/1">
    <GridPane HBox.hgrow="ALWAYS">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10" prefWidth="150" />
        </columnConstraints>
        <VBox alignment="CENTER_LEFT" minHeight="105" GridPane.columnIndex="0">
            <padding>
                <Insets bottom="5" left="15" right="5" top="5" />
            </padding>
            <HBox alignment="CENTER">
                <VBox maxWidth="700" minWidth="700">
                    <HBox alignment="TOP_LEFT" spacing="5">
                        <Label fx:id="id" styleClass="cell_big_label">
                            <minWidth>
                                <!-- Ensures that the label text is never truncated -->
                                <Region fx:constant="USE_PREF_SIZE" />
                            </minWidth>
                        </Label>
                        <Label fx:id="incomeDescription" styleClass="cell_big_label" text="\$first" />
                    </HBox>
                    <FlowPane fx:id="tags" />
                    <Label fx:id="incomeDate" styleClass="cell_small_label" text="\$date" />
                    <HBox>
                      <Label fx:id="incomeRemark" styleClass="cell_small_label" text="\$reserved" />
                    </HBox>
                </VBox>
                <Pane minWidth="50" HBox.hgrow="ALWAYS" />
                <Label fx:id="incomeValue" styleClass="cell_small_label" text="\$value">
                <HBox.margin>
                    <Insets top="-20.0" />
                </HBox.margin>
                </Label>
            </HBox>
        </VBox>
      <rowConstraints>
         <RowConstraints />
      </rowConstraints>
    </GridPane>
</HBox>
