@startuml
!include style.puml
skinparam arrowThickness 1.1
skinparam arrowColor LOGIC_COLOR_T4
skinparam classBackgroundColor LOGIC_COLOR

package Logic {

package Parser {
Interface Parser <<Interface>>
Class ThriftParser
Class XYZCommandParser
Class CliSyntax
Class ParserUtil
Class ArgumentMultimap
Class ArgumentTokenizer
Class Prefix
}

package Command {
Class ABCCommand
note left: ABCCommand = \nFindCommand, \nListCommand, \nBudgetCommand, etc
Class XYZCommand
note left: XYZCommand = \nAddExpenseCommand, \nAddIncomeCommand, \nUndoCommand, etc
Class CommandResult
Class "{abstract}\nCommand" as Command
class "<<Interface>>\nUndoable" as Undoable
Class "{abstract}\nScrollableCommand" as ScrollableCommand
Class "{abstract}\nUnscrollableCommand" as UnscrollableCommand
}

Interface Logic <<Interface>>
Class LogicManager
}

package Model{
Class HiddenModel #FFFFFF
}

package Storage{
Class HiddenModel #FFFFFF
}

package UI{
Class HiddenModel #FFFFFF
}

Class HiddenOutside #FFFFFF
HiddenOutside ..> Logic

LogicManager .up.|> Logic
LogicManager -->"1" ThriftParser
ThriftParser .left.> XYZCommandParser: creates >

XYZCommandParser ..> XYZCommand : creates >
XYZCommandParser ..> ABCCommand : creates >
XYZCommandParser ..|> Parser
XYZCommandParser ..> ArgumentMultimap
XYZCommandParser ..> ArgumentTokenizer
ArgumentTokenizer .left.> ArgumentMultimap
XYZCommandParser ..> CliSyntax
CliSyntax ..> Prefix
XYZCommandParser ..> ParserUtil
ParserUtil .down.> Prefix
ArgumentTokenizer .down.> Prefix
ScrollableCommand -up-|> Command
UnscrollableCommand -up-|> Command
XYZCommand .up.|> Undoable
XYZCommand -up-|> ScrollableCommand
ABCCommand -up-|>UnscrollableCommand
LogicManager .left.> Command : executes >

LogicManager --> Model
Command .right.> Model

ScrollableCommand ..> UI
LogicManager -right-> Storage

ScrollableCommand -[hidden]left- UI
ThriftParser -[hidden]up- Logic
Undoable -[hidden]right- ThriftParser
XYZCommand -[hidden]right- ParserUtil


Logic ..> CommandResult
LogicManager .down.> CommandResult
Command .up.> CommandResult
CommandResult -[hidden]-> Parser
@enduml
